<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import ru.cataclysm.controls.SVGLabel?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.cataclysm.controllers.SettingsController">
      <padding>
         <Insets left="35.0" right="35.0" top="50.0"/>
      </padding>
      <HBox prefWidth="320.0">
         <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Настройки ">
            <font>
               <Font name="Gilroy-Bold" size="40.0"/>
            </font>
         </Text>
         <Text fill="#df9422" strokeType="OUTSIDE" strokeWidth="0.0" text="игры">
            <font>
               <Font name="Gilroy-Bold" size="40.0"/>
            </font>
         </Text>
      </HBox>

      <!--Game Path block-->
      <HBox prefWidth="400.0">
         <VBox.margin>
            <Insets top="35.0"/>
         </VBox.margin>
         <SVGLabel prefHeight="30" prefWidth="400"
                text="Путь до папки с игрой:"
                textFill="white"
                svgId="gamepath">
            <font>
               <Font name="Gilroy-Medium" size="20.0"/>
            </font>
         </SVGLabel>
      </HBox>

      <HBox layoutX="45.0" layoutY="144.0" prefWidth="200.0">
         <VBox.margin>
            <Insets top="15.0"/>
         </VBox.margin>
         <TextField fx:id="directoryInput" prefHeight="51.0" prefWidth="300.0" promptText="C:\Users\ыуе"
                    editable="false"
                    style="-fx-background-color: #0E0E0E; -fx-border-color: #DF9422; -fx-border-radius: 5 0 0 5; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #FFFFFF; -fx-border-width: 1 0 1 1;"
                    HBox.hgrow="ALWAYS">
            <opaqueInsets>
               <Insets/>
            </opaqueInsets>
            <font>
               <Font name="Gilroy-Regular" size="16.0"/>
            </font>
            <padding>
               <Insets left="20.0"/>
            </padding>
         </TextField>
         <Button fx:id="changeDirectoryButton" onMouseClicked="#changeDirectoryButton_Click"
                 graphicTextGap="1.0" mnemonicParsing="false" prefHeight="50.0"
                 prefWidth="200.0" style="-fx-background-color: #DF9422; -fx-background-radius: 0 5 5 0;"
                 text="Изменить" textFill="WHITE">
            <font>
               <Font name="Gilroy-Bold" size="20.0"/>
            </font>
         </Button>
      </HBox>

      <HBox prefHeight="100.0">
         <!--Memory block-->
         <VBox.margin>
            <Insets top="25.0"/>
         </VBox.margin>
         <VBox prefHeight="200.0" prefWidth="400.0">
            <HBox.margin>
               <Insets right="25.0"/>
            </HBox.margin>
            <SVGLabel prefHeight="30" prefWidth="400"
                      text="Ограничение памяти:"
                      textFill="white"
                      svgId="memory">
               <font>
                  <Font name="Gilroy-Medium" size="20.0"/>
               </font>
            </SVGLabel>
            <ChoiceBox fx:id="memoryLimitChoiceBox" prefHeight="40.0" prefWidth="400.0"
                       stylesheets="@../styles/choice-box.css">
               <VBox.margin>
                  <Insets top="12.0"/>
               </VBox.margin>
            </ChoiceBox>
         </VBox>
         <!--Report block-->
         <VBox prefHeight="200.0" prefWidth="305.0">
            <SVGLabel prefHeight="30" prefWidth="305"
                      text="Отчёт:"
                      textFill="white"
                      svgId="report">
               <font>
                  <Font name="Gilroy-Medium" size="20.0"/>
               </font>
            </SVGLabel>
            <Button fx:id="createReportButton" onMouseClicked="#createReportButton_Click" graphicTextGap="1.0" mnemonicParsing="false" prefHeight="40.0"
                    prefWidth="305.0" style="-fx-background-color: #DF9422;" text="Создать отчет"
                    textFill="WHITE" VBox.vgrow="ALWAYS">
               <font>
                  <Font name="Gilroy-Bold" size="20.0"/>
               </font>
               <VBox.margin>
                  <Insets top="12.0"/>
               </VBox.margin>
            </Button>
         </VBox>
      </HBox>

</VBox>
