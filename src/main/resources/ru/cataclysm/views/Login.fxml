<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import ru.cataclysm.controls.SVGButton?>
<?import javafx.scene.control.PasswordField?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="1000.0" style="-fx-background-color: #0E0E0E;" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.cataclysm.controllers.LoginController">
   <VBox alignment="TOP_CENTER" layoutX="350.0" prefHeight="600.0" prefWidth="300.0">
      <ImageView fitHeight="38.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
         <VBox.margin>
            <Insets top="50.0"/>
         </VBox.margin>
         <Image url="@../images/LogoFull.png"/>
      </ImageView>
      <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Авторизация" wrappingWidth="300.0">
         <font>
            <Font name="Gilroy-Bold" size="24.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="20.0" top="50.0"/>
         </VBox.margin>
      </Text>
      <Text fx:id="incorrectLoginDataLabel" fill="WHITE" layoutX="10.0" layoutY="173.0" strokeType="OUTSIDE"
            strokeWidth="0.0" text="*Неверный логин или пароль!" wrappingWidth="300.0">
         <font>
            <Font name="Gilroy-Regular" size="14.0"/>
         </font>
      </Text>
      <TextField fx:id="loginInput" prefHeight="50.0" prefWidth="300.0" promptText="Логин"
                 style="-fx-background-color: #0E0E0E; -fx-border-color: #DF9422; -fx-border-radius: 5; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #FFFFFF;">
         <opaqueInsets>
            <Insets/>
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="20.0" top="7.0"/>
         </VBox.margin>
         <font>
            <Font name="Gilroy-Regular" size="16.0"/>
         </font>
         <padding>
            <Insets left="20.0"/>
         </padding>
      </TextField>
      <Text fx:id="forgetPasswordLink" fill="WHITE" layoutX="10.0" layoutY="224.0" strokeType="OUTSIDE"
            strokeWidth="0.0" text="Забыли пароль?" textAlignment="RIGHT" wrappingWidth="300.0">
         <font>
            <Font name="Gilroy-Regular" size="14.0"/>
         </font>
      </Text>
      <PasswordField fx:id="passwordInput" layoutX="10.0" layoutY="240.0" prefHeight="50.0" prefWidth="300.0"
                 promptText="Пароль"
                 style="-fx-background-color: #0E0E0E; -fx-border-color: #DF9422; -fx-border-radius: 5; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #FFFFFF;">
         <opaqueInsets>
            <Insets/>
         </opaqueInsets>
         <font>
            <Font name="Gilroy-Regular" size="16.0"/>
         </font>
         <padding>
            <Insets left="20.0"/>
         </padding>
         <VBox.margin>
            <Insets top="7.0"/>
         </VBox.margin>
      </PasswordField>
      <Button fx:id="loginButton" onMouseClicked="#buttonLogin_Click" graphicTextGap="1.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="300.0"
              style="-fx-background-color: #DF9422;" text="Войти" textFill="WHITE">
         <VBox.margin>
            <Insets top="20.0"/>
         </VBox.margin>
         <font>
            <Font name="Gilroy-Bold" size="20.0"/>
         </font>
      </Button>
      <HBox alignment="CENTER" prefHeight="10.0" prefWidth="200.0">
         <VBox.margin>
            <Insets top="20.0"/>
         </VBox.margin>
         <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Нет аккаунта?" HBox.hgrow="NEVER">
            <font>
               <Font name="Gilroy-Regular" size="14.0"/>
            </font>
            <HBox.margin>
               <Insets/>
            </HBox.margin>
         </Text>
         <Hyperlink fx:id="redirectToRegisterLink" onMouseClicked="#buttonRegister_Click" accessibleRole="BUTTON" style="-fx-text-fill: #FFFFFF;"
                    text="Зарегистрироваться" underline="true">
            <font>
               <Font name="Gilroy-Regular" size="14.0"/>
            </font>
         </Hyperlink>
      </HBox>
   </VBox>

   <HBox prefHeight="20.0" prefWidth="60.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
      <SVGButton prefHeight="20" prefWidth="20"
                 onMouseClicked="#buttonMinimize_Click"
                 stylesheets="@../styles/button.css"
                 svgId="minimizeButton"
      />
      <SVGButton prefHeight="20" prefWidth="20"
                 onMouseClicked="#buttonClose_Click"
                 stylesheets="@../styles/button.css"
                 svgId="closeButton"
      />
   </HBox>
</AnchorPane>
